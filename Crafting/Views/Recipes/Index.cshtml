@{
  Layout = "_Layout";
}

@using Crafting.Models;

<h2>List of recipes available for crafting:</h2>
<h4><em>(Click a recipe to edit.)</em></h4>

@if (Model.Count > 0)
{
<ul>
@foreach (Recipe recipe in Model)
{
  <li>@Html.ActionLink($"{recipe.Name}", "Edit", new {id = recipe.RecipeId})</li>
}
</ul>
}

<p>@Html.ActionLink("Create a new recipe", "Create")</p>