@{
  Layout = "_Layout";
}

@using Crafting.Models;

<h2>List of Items available for crafting:</h2>
<h4><em>(Click an item to edit name and quantity available.)</em></h4>

@if (Model.Count > 0)
{
<ul>
@foreach (Item item in Model)
{
  <li>@Html.ActionLink($"{item.ItemName}", "Edit", new {id = item.ItemId}) <em>Qty: @item.Quantity</em></li>
}
</ul>
}

<p>@Html.ActionLink("Create a new Item", "Create")</p>